{% extends 'Admin/main_frame.twig' %}

{% block title %}ショップ設定{% endblock %}
{% block sub_title %}会員規約管理{% endblock %}

{% block main %}

<form name="customer_agreement_form" id="customer_agreement_form" method="post" action="{{ url('admin_setting_shop_customer_agreement') }}">
    {{ form_widget(form._token) }}
    <div id="customer_agreement" class="contents-main">
        <table>
            <tr>
                <th>規約内容<span class="attention"> *</span></th>
                <td>
                    {{ form_widget(form.customer_agreement) }}
                    {{ form_errors(form.customer_agreement) }}
                </td>
            </tr>
        </table>
        <div class="btn-area">
            {{ form_widget(form.save) }}
        </div>
    </div>
</form>

{% endblock %}